<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button: 
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label: 
            text: "Sign up now!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Sign Up"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpSuccess>:
    GridLayout:
        cols:1
        Label: 
            text: "Successfully Signed Up!"
        Button:
            text: "Login Page"
            on_press: root.switchToLogin()

<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpSuccess:
        name:"sign_up_success"
